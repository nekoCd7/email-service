                    <div class="nav-section">
                        <a href="/app/inbox" class="nav-item">[*] Inbox</a>
                        <a href="/app/sent" class="nav-item">[>] Sent</a>
                        <a href="/app/drafts" class="nav-item">[#] Drafts</a>
                        <a href="/app/compose" class="nav-item">[+] Compose</a>
                    </div>
                    <div class="nav-divider"></div>
                    <div class="nav-section">
                        <a href="/app/mailboxes" class="nav-item">[~] Mailboxes</a>
                        <a href="/app/domains" class="nav-item">[D] Domains</a>
                        <a href="/app/forwarding" class="nav-item active">[F] Forwarding</a>
                        <a href="/app/account" class="nav-item">[!] Account</a>
                        <a href="/app/settings" class="nav-item">[*] Settings</a>
                    </div>
                </nav>
            </div>
            <div class="content">
                <div class="content-header">
                    <h1>Email Forwarding</h1>
                </div>
                <div class="card">
                    <p>Email forwarding feature coming soon. Set up automatic forwarding rules for your emails.</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
    <script>
        const SUPABASE_URL = '<%= SUPABASE_URL %>';
        const SUPABASE_ANON_KEY = '<%= SUPABASE_ANON_KEY %>';
        const supabase = supabaseJs.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        async function init() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) return window.location.href = '/login';
            document.getElementById('userEmail').textContent = user.email;
        }
        document.getElementById('logoutBtn').addEventListener('click', async () => {
            await supabase.auth.signOut();
            window.location.href = '/login';
        });
        init();
    </script>
