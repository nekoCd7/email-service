    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
    <script>
        const SUPABASE_URL = '<%= SUPABASE_URL %>';
        const SUPABASE_ANON_KEY = '<%= SUPABASE_ANON_KEY %>';
        const supabase = supabaseJs.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        let forwardingRules = [];

        async function loadForwardingRules() {
            try {
                const response = await fetch('/api/forwarding-rules');
                if (response.ok) {
                    forwardingRules = await response.json();
                    renderRules();
                    updateStats();
                }
            } catch (err) {
                console.error('Failed to load forwarding rules:', err);
            }
        }

        function renderRules() {
            const rulesList = document.getElementById('rulesList');
            const emptyState = document.getElementById('emptyRulesState');

            if (forwardingRules.length === 0) {
                rulesList.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }

            emptyState.style.display = 'none';
            rulesList.innerHTML = forwardingRules.map(rule => `
                <div class="rule-item">
                    <div class="rule-from">${escapeHtml(rule.from)}</div>
                    <div class="rule-arrow">[>]</div>
                    <div class="rule-to">${escapeHtml(rule.to)}</div>
                    <div class="rule-actions">
                        <button class="btn btn-sm btn-secondary" onclick="editRule(${rule.id})">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteRule(${rule.id})">Delete</button>
                    </div>
                </div>
            `).join('');
        }

        function updateStats() {
            document.getElementById('activeRulesCount').textContent = forwardingRules.filter(r => r.enabled).length;
            document.getElementById('catchallCount').textContent = '1';
            document.getElementById('totalTargets').textContent = new Set(forwardingRules.map(r => r.to)).size;
        }

        async function deleteRule(id) {
            if (!confirm('Delete this forwarding rule?')) return;
            try {
                const response = await fetch(`/api/forwarding-rules/${id}`, { method: 'DELETE' });
                if (response.ok) {
                    forwardingRules = forwardingRules.filter(r => r.id !== id);
                    renderRules();
                    updateStats();
                }
            } catch (err) {
                console.error('Failed to delete rule:', err);
            }
        }

        function editRule(id) {
            alert('Edit functionality coming soon');
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        async function init() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) return window.location.href = '/login';
            document.getElementById('userEmail').textContent = user.email;
            loadForwardingRules();
        }

        document.getElementById('logoutBtn').addEventListener('click', async () => {
            await supabase.auth.signOut();
            window.location.href = '/login';
        });

        document.getElementById('addRuleBtn').addEventListener('click', () => {
            document.getElementById('addRuleModal').style.display = 'flex';
        });

        function switchTab(tab) {
            document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelector(`[data-tab="${tab}"]`).classList.add('active');
            document.getElementById(tab).classList.add('active');
        }

        document.querySelectorAll('.tab-button').forEach(btn => {
            btn.addEventListener('click', (e) => switchTab(e.target.dataset.tab));
        });

        init();
    </script>
