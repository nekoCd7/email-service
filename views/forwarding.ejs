            <div class="content">
                <div class="content-header">
                    <h1>Email Forwarding Rules</h1>
                </div>

                <div class="tabs">
                    <button class="tab-button active" data-tab="overview">Overview</button>
                    <button class="tab-button" data-tab="rules">Forwarding Rules</button>
                    <button class="tab-button" data-tab="catchall">Catch-All</button>
                    <button class="tab-button" data-tab="filters">Smart Filters</button>
                </div>

                <!-- Overview Tab -->
                <div class="tab-content active" id="overview">
                    <div class="card">
                        <div class="card-header">Forwarding Overview</div>
                        <div class="info-grid">
                            <div class="info-card">
                                <div class="info-value" id="activeRulesCount">0</div>
                                <div class="info-label">Active Rules</div>
                            </div>
                            <div class="info-card">
                                <div class="info-value" id="catchallCount">0</div>
                                <div class="info-label">Catch-All Status</div>
                            </div>
                            <div class="info-card">
                                <div class="info-value" id="totalTargets">0</div>
                                <div class="info-label">Forwarding Targets</div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">Quick Start</div>
                        <div class="form-stack">
                            <p>Set up email forwarding to automatically redirect emails from your domain to other addresses. You can:</p>
                            <ul style="margin-left: 20px; color: #a0aec0;">
                                <li>Forward specific addresses to other email accounts</li>
                                <li>Set up catch-all forwarding for unmapped addresses</li>
                                <li>Create smart filters based on sender/subject</li>
                                <li>Optionally keep copies in your mailbox</li>
                            </ul>
                            <button class="btn btn-primary" onclick="switchTab('rules')">Create Rule</button>
                        </div>
                    </div>
                </div>

                <!-- Rules Tab -->
                <div class="tab-content" id="rules">
                    <div class="card">
                        <div class="card-header">Forwarding Rules
                            <button class="btn btn-primary" style="float:right" id="addRuleBtn">+ Add Rule</button>
                        </div>

                        <div id="rulesList"></div>

                        <div id="emptyRulesState" class="empty-state">
                            <p>No rules configured. Create your first rule.</p>
                        </div>
                    </div>

                    <!-- Add Rule Modal -->
                    <div id="addRuleModal" class="modal" style="display:none">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2>Add Forwarding Rule</h2>
                                <button class="modal-close" onclick="document.getElementById('addRuleModal').style.display='none'">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>From Email Address</label>
                                    <input type="email" class="form-input" placeholder="info@yourdomain.com">
                                </div>
                                <div class="form-group">
                                    <label>Forward To</label>
                                    <input type="email" class="form-input" placeholder="recipient@example.com">
                                </div>
                                <div class="form-group">
                                    <label>
                                        <input type="checkbox"> Keep copy in mailbox
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>
                                        <input type="checkbox"> Enable for this rule
                                    </label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" onclick="document.getElementById('addRuleModal').style.display='none'">Cancel</button>
                                <button class="btn btn-primary">Create Rule</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Catch-All Tab -->
                <div class="tab-content" id="catchall">
                    <div class="card">
                        <div class="card-header">Catch-All Forwarding</div>
                        <p style="margin-bottom: 20px; color: #a0aec0;">Forward all emails sent to unmapped addresses on your domain to a specific address.</p>
                        
                        <div class="form-stack">
                            <div class="form-group">
                                <label>Enable Catch-All</label>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="catchallToggle" checked>
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                            <div class="form-group">
                                <label>Forward to</label>
                                <input type="email" class="form-input" placeholder="main@example.com" value="main@example.com">
                            </div>
                            <div class="form-group">
                                <label>
                                    <input type="checkbox" checked> Keep copy in mailbox
                                </label>
                            </div>
                            <button class="btn btn-primary">Update Catch-All</button>
                        </div>

                        <div style="margin-top: 30px; padding: 15px; background: rgba(34,197,94,0.1); border-radius: 8px; border-left: 3px solid #22c55e;">
                            <strong>Active</strong><br>
                            <small>Forwarding all unmapped addresses to: main@example.com</small>
                        </div>
                    </div>
                </div>

                <!-- Smart Filters Tab -->
                <div class="tab-content" id="filters">
                    <div class="card">
                        <div class="card-header">Smart Forwarding Filters
                            <button class="btn btn-primary" style="float:right">+ Add Filter</button>
                        </div>

                        <div id="filtersList" class="empty-state">
                            <p>No filters configured</p>
                            <p style="font-size:12px">Create filters to forward emails based on sender, subject, or content</p>
                        </div>
                    </div>
                </div>
