        <div class="top-bar">
            <div class="top-bar-left">@ Email Service</div>
            <div class="top-bar-right">
                <div class="user-info">
                    <span id="userEmail"></span>
                    <button id="logoutBtn" class="btn">Logout</button>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="sidebar">
