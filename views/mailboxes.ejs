    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.min.js"></script>
    <script>
        const SUPABASE_URL = '<%= SUPABASE_URL %>';
        const SUPABASE_ANON_KEY = '<%= SUPABASE_ANON_KEY %>';
        const supabase = supabaseJs.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        let mailboxes = [];

        async function loadMailboxes() {
            try {
                const response = await fetch('/api/mailboxes');
                if (response.ok) {
                    mailboxes = await response.json();
                    renderMailboxes();
                    updateStats();
                }
            } catch (err) {
                console.error('Failed to load mailboxes:', err);
                document.getElementById('mailboxesList').innerHTML = '<tr><td colspan="6" style="text-align: center; color: #ef4444;">Failed to load mailboxes</td></tr>';
            }
        }

        function renderMailboxes() {
            const tbody = document.getElementById('mailboxesList');
            if (mailboxes.length === 0) {
                tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #a0aec0;">No mailboxes configured</td></tr>';
                return;
            }

            tbody.innerHTML = mailboxes.map(mb => `
                <tr>
                    <td>${escapeHtml(mb.email)}</td>
                    <td>${escapeHtml(mb.name || 'N/A')}</td>
                    <td><span class="badge badge-success">${mb.status === 'active' ? 'Active' : 'Inactive'}</span></td>
                    <td>${new Date(mb.created).toLocaleDateString()}</td>
                    <td><small>${mb.used} MB / ${mb.quota} MB</small></td>
                    <td><button class="btn btn-sm" onclick="editMailbox(${mb.id})">Edit</button></td>
                </tr>
            `).join('');
        }

        function updateStats() {
            const totalUsed = mailboxes.reduce((sum, mb) => sum + (mb.used || 0), 0);
            const totalQuota = 5120; // 5 GB in MB
            const percent = Math.round((totalUsed / totalQuota) * 100);

            document.getElementById('totalMailboxes').textContent = mailboxes.length;
            document.getElementById('storageUsed').textContent = totalUsed;
            document.getElementById('storagePercent').textContent = percent;
            document.getElementById('storageBar').style.width = percent + '%';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function editMailbox(id) {
            alert('Edit mailbox functionality coming soon');
        }

        async function init() {
            const { data: { user } } = await supabase.auth.getUser();
            if (!user) return window.location.href = '/login';
            document.getElementById('userEmail').textContent = user.email;
            loadMailboxes();
        }

        document.getElementById('logoutBtn').addEventListener('click', async () => {
            await supabase.auth.signOut();
            window.location.href = '/login';
        });

        document.getElementById('addMailboxBtn').addEventListener('click', () => {
            alert('Add mailbox form not yet implemented');
        });

        document.querySelectorAll('.tab-button').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
                e.target.classList.add('active');
                document.getElementById(e.target.dataset.tab).classList.add('active');
            });
        });

        init();
    </script>
</body>
</html>
